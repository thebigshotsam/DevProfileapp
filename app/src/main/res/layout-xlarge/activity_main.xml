<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="250dp" app:srcCompat="@drawable/devslopesbanner"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="180dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Devslopes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="32sp" app:layout_constraintStart_toEndOf="@+id/imageView2"
            android:layout_marginStart="40dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:textStyle="bold"
            android:textColor="@color/colorAccent"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/camerabutton"
            tools:layout_editor_absoluteY="294dp" android:id="@+id/imageView10"
            app:layout_constraintStart_toEndOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView11"
            app:layout_constraintHorizontal_chainStyle="packed"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/favoritebutton"
            tools:layout_editor_absoluteY="294dp" android:id="@+id/imageView11"
            app:layout_constraintStart_toEndOf="@+id/imageView10" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView12" android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/imageView12"
            app:layout_constraintStart_toEndOf="@+id/imageView11" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
            android:id="@+id/imageView13" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:scaleType="centerCrop" app:layout_constraintDimensionRatio="w,9:16"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/dataimage"
            android:id="@+id/imageView14"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="@+id/imageView13" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintDimensionRatio="w,9:16"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
            android:id="@+id/imageView15"
            android:scaleType="centerCrop" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView13" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintDimensionRatio="w,9:16"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/videosimage"
            android:id="@+id/imageView16"
            android:scaleType="centerCrop" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView14" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintDimensionRatio="w,9:16"/>
    <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button" app:layout_constraintHorizontal_bias="0.5" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView15" android:text="CUSTOMIZE DASHBOARD"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimary"
            android:textColor="@android:color/white" android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>